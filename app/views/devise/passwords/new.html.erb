<section class="container-lg section">
  <h2 class="heading--sm text-center mb-4">Forgot your password?</h2>
  <div class="sigin--option">
    <div class="form__card">
      <p class="content-sm">Don't worry. you can receive the instructions to reset your password</p>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data:{turbo: false}, class: "form" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, class: "overline"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form__input", placeholder: "example@mail.com" %>
        </div>


        <%= f.submit "SEND", class:"button button--primary" %>
      <% end %>
    </div>
  </div>
</section>

