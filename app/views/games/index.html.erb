<section class="flex flex-column gap-1">
  <div class="text-center">

      <h2>Games</h2>
  </div>
  
  <% if policy(Game).new? %>
  <div class="text-center">
    <%= link_to "NEW GAME", new_game_path, class:"button button--sm button--primary display-initial" %>
  </div>
  <% end %>

  <div id="games" class="elements__cards_container">
    <% @games.order(:name).each do |game| %>
      <%= render "games/game_card", game: game %>
    <% end %>
  </div>

</section>
