<section class="container-lg section">

  <h2 class="heading--sm text-center mb-4">Change your password</h2>

  <div class="sigin--option">
    <div class="form__card">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.label :password, "New password", class: "overline" %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, class: "form__input", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Confirm new password", class: "overline" %><br />
          <%= f.password_field :password_confirmation, class: "form__input", autocomplete: "new-password" %>
        </div>

        <%= f.submit "Change my password", class:"button button--primary" %>
      <% end %>
    </div>
  </div>
</section>
